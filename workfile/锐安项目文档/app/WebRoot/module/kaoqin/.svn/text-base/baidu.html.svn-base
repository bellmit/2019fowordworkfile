function load(){
	$("#address").attr("value","");
	
	wx.getLocation({
		type: 'gcj02', // 默认为gcj02的gps坐标，如果要返回直接给openLocation用的火星坐标，可传入'gcj02'
		success: function (res) {
			var latitude = res.latitude; // 纬度，浮点数，范围为90 ~ -90
			var longitude = res.longitude; // 经度，浮点数，范围为180 ~ -180。
			var mLocationStr=[];
			mLocationStr.push(longitude);
			mLocationStr.push(latitude);
			
			$("#mLocation_X").val(latitude);
			$("#mLocation_Y").val(longitude);
			var location = latitude+","+longitude;
			var setPosition = longitude+","+latitude;
			// 百度地图API功能
			var map = new BMap.Map("container");
			var point = new BMap.Point(longitude,latitude);
			map.centerAndZoom(point,17);
			map.clearOverlays();
			var marker = new BMap.Marker(setPosition);  // 创建标注
			map.addOverlay(marker); 
			map.panTo(setPosition);
			jQuery.ajax({  
	            url: 'https://api.map.baidu.com/geocoder/v2/',  
				data: {
					location:location,
					output:'json',
					pois:'1',
					ak:'7ebC5jOb9IEEecyddRzztgtruUtQtOQS'
				},
	            timeout: 3000,  
	            dataType: 'jsonp',   
	            callback:"renderReverse",   
	            success: function (res) {   
					var addressComponent = res.result.addressComponent;
					var locationAdress = addressComponent.province+','+addressComponent.city+','+addressComponent.district+','+addressComponent.street;
					var province = addressComponent.province;
					var city = addressComponent.city;
					var district = addressComponent.district;
					var street = addressComponent.street;
					var street_number = addressComponent.street_number ;
					$("#province").val(province);
					$("#city").val(city);
					$("#district").val(district);
					$("#street").val(street);
					$("#streetNumber").val(street_number);
					var address = province + ", " + city + ", " + district + ", " + street + ", " + street_number;
					$("#address").val(locationAdress);
					$("#adressMsg").val(address);
	            },   
	            error: function () {   
	               alert('定位失败！');     
	            } 
			})
		}
	})
}
			
